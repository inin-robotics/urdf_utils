<?xml version="1.0" encoding="utf-8"?>
<robot name="macro_template_name"
  xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find package_template_name)/urdf/macro_template_name.xacro" />
  <xacro:arg name="sim"
    default="false" />
  <link name="base_link"/>
  <xacro:macro_template_name parent="base_link" sim="$(arg sim)" />
</robot>